{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@flab/api-data": ["libs/api-data/src/index.ts"],
      "@flab/common-ui": ["libs/common-ui/src/index.ts"],
      "@flab/core-data": ["libs/core-data/src/index.ts"],
      "@flab/core-state": ["libs/core-state/src/index.ts"],
      "@flab/testing-utils/cypress-commands": [
        "libs/testing-utils/cypress-commands/src/index.ts"
      ],
      "@flab/testing-utils/mocks": ["libs/testing-utils/mocks/src/index.ts"],
      "@flab/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
